          <div class="container-fluid padding-25 sm-padding-10">
            <!-- START ROW -->
            <div class="row">
              <div class="col-md-8 col-xlg-8">
                  <!-- <div class="col-md-12 m-b-10"> -->
                    <div class="ar-3-2 widget-1-wrapper">
                      <!-- START WIDGET -->
                      <div class="widget-1 panel no-border bg-complete no-margin widget-loader-circle-lg">
                        <div class="panel-body">
                          <div class="pull-bottom bottom-left bottom-right">
                            <span class="label font-montserrat fs-11"><%= t('index.your_credit') %></span>
                            <br>
                            <h2 class="text-white"><%= number_to_currency(@credit) %><% if !current_user.activated %>
                              <%= t('index.not_activated_error') %>
                              <% end %></h2>
                            <p class="text-white hint-text"><%= t('index.your_credit_hint_text') %></p>
                          </div>
                        </div>
                      </div>
                      <!-- END WIDGET -->

                    </div>
                  <!-- </div> -->
              </div>

              <!-- Filler -->
              <div class="col-md-4 col-xlg-4">
                <div class="ar-2-3">
                  <!-- START WIDGET -->
                  <div class="widget-11 panel no-border no-margin widget-loader-bar">
                    <div class="panel-heading">
                      <div class="panel-title"><%= t('index.transaction_record') %>
                      </div>
                    </div>
                    <div class="widget-11-table auto-overflow">
                      <table class="table table-condensed table-hover">
                        <tbody>
                          <% for transaction in @transactions.each %>
                            <tr>
                              <td class="font-montserrat all-caps fs-3" style="width: 17%">
                                <% if transaction.sender == current_user %>
                                  <%= t('index.transaction_out') %>
                                <% else -%>
                                  <%= t('index.transaction_in') %>
                                <% end -%>
                              </td>
                              <td class="text-right" style="width: 17%">
                                  #<%= transaction.no %>
                              </td>
                              <td class="text-right" style="width: 30%">
                                  <%= transaction.type.name %>
                              </td>
                              <td class="text-right b-r b-dashed b-grey">
                                <span class="hint-text small"><%= transaction.remark %></span>
                              </td>
                              <td>
                                <span class="font-montserrat fs-18"><%= number_to_currency(transaction.credit) %></span>
                              </td>
                            </tr>
                          <% end %>
                          
                          
                        </tbody>
                      </table>
                    </div>
                  </div>
                  <!-- END WIDGET -->
                </div>
              </div>
            </div>
            <!-- END ROW -->
          </div>